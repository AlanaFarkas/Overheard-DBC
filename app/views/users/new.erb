<h2>Create your account</h2>

<div class="login-form">
<form method="POST" action="/users">
<div><input type="text" name="user[email]" placeholder="Email"></div>
<div><input type="password" name="user[password]" placeholder="Password"></div>
<div><input type="submit" value="Register"></div>
</form> 

<% if @errors %>
  <ul>
    <% @errors.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

