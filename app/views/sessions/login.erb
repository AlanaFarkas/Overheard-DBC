<h1>Login</h1>

<div class="login-form">
<form method="POST" action="/login">
<div><input type="text" name="user[email]" placeholder="Email"></div>
<div><input type="password" name="user[password]" placeholder="Password"></div>
 <div><input type="submit" value="Login"></div>
</form>

 <% if @errors %>
   <ul>
     <% @errors.each do |message| %>
     <li><%= message %></li>
    </ul>
    <% end %>
 <% end %>
 </div>